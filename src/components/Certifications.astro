---
import { siteConfig } from "../config";
const hasCertifications = siteConfig.certifications && siteConfig.certifications.length > 0;
---

{
  hasCertifications && (
    <section id="certifications" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div class="max-w-7xl mx-auto">
        {/* Section Title */}
        <div class="mb-8">
          <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
            Certifications
          </h2>
          <div
            class="w-[75px] h-[5px] mt-2 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        {/* Certificates Grid */}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {siteConfig.certifications.map((cert) => (
            <a 
              href={cert.link} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 hover:shadow-md transition-all duration-300 flex flex-col h-full"
            >
              <div class="mb-4 flex-1">
                {/* Fixed size image container */}
                <div class="w-full h-40 mb-4 flex items-center justify-center overflow-hidden rounded-md bg-gray-50">
                  <img 
                    src={cert.image} 
                    alt={`${cert.name} Certificate`} 
                    class="max-h-full max-w-full object-contain p-2"
                  />
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-1">
                  {cert.name}
                </h3>
                <p
                  class="text-base"
                  style={`color: ${siteConfig.accentColor}`}
                >
                  {cert.issuer}
                </p>
              </div>
              <div class="flex justify-between items-center mt-2">
                <span class="text-sm text-gray-500">{cert.date}</span>
                <span class="text-sm font-medium" style={`color: ${siteConfig.accentColor}`}>
                  View Certificate â†’
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )
}
